<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed='true'>
        <shape
            android:shape="rectangle"   >

            <solid
                android:color="@color/md_grey_100" >
            </solid>



            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    >
            </padding>

            <corners
                android:radius="5dp"   >
            </corners>

        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle"   >

            <solid
                android:color="@color/md_grey_50" >
            </solid>


            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    >
            </padding>

            <corners
                android:radius="5dp"   >
            </corners>

        </shape>
    </item>

</selector>
