<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed='true'>
        <shape
            android:shape="rectangle"   >

            <gradient
                android:startColor="#0DE1FF"
                android:endColor="#0008FF"
                android:angle="-90"/>

            <stroke
                android:width="1dp"
                android:color="@color/global__primary" >
            </stroke>

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    >
            </padding>

            <corners
                android:radius="30dp"   >
            </corners>

        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle"   >
            <gradient
                android:startColor="#0DE1FF"
                android:endColor="#0008FF"
                android:angle="-90"/>



            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    >
            </padding>

            <corners
                android:radius="30dp"   >
            </corners>

        </shape>
    </item>

</selector>
